.myworks {
    background-image: url('../images/content/layer-section-mywork.jpg');
    background-repeat: no-repeat;
    background-position: 100% 10%;
    @include phones {
        width: 100%;
    }
}
.myworks-trangles {
    position: relative;
    height: 80px;
    transform: rotate(180deg);
    margin-bottom: -75px;
    @include phones {
        margin-bottom: -6rem;
    }
    &__item {
        display: block;
        width: 100%;
        position: absolute;
        height: 100%;
        fill: #fff;
    }
}
.myworks-title {
    padding-top: 0;
    padding-left: 2rem;
    justify-content: flex-start;
    & .title-name {
        font-size: 2rem;
    }
    &.title::before{
        display: none;
    }
}
.myworks-block {
    padding-left: 2rem;
    display: flex;
    flex-direction: row;
    @include tablets {
        flex-direction: column;
    }
    @include phones {
        padding-left: 0;
    }
    &__first, &__second {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        @include tablets {
            width: 85%;
        }
        @include phones {
            width: 100%;
        }
    }
}
.technologies {
    &-title {
        flex: 1;
        padding: 0 20%;
        flex-direction: column;
        justify-content: space-between;
        @include tablets {
            padding: 0 10%;
            align-items: center;
            text-align: center;
        }
        & .title-name {
            font-size: 1.5rem;
            width: 100%;
            text-align: start;
            padding-right: 50%;
            padding-top: 1rem;
            @include tablets {
                padding-right: 0;
                text-align: center;
            }
        }
        &.title::before{
            display: none;
        }
        & .title-about {
            padding-right: 30%;
            @include tablets {
                padding:  2rem 0;
            }
        }
    }
    &-list {
        display: flex;
        flex-direction: row;
        justify-content: start;
        padding: 0 20%;
        @include tablets {
            padding: 0 10%;
            justify-content: center;
        }
    }
    &__item {
        margin-right: 1rem;
        padding: 5px 12px;
        background-color: #f2f5f9;
        border-radius: 15px;
    }
}
.controls {
    padding-left: 80%;
    padding-right: 0;
    background: transparent;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    @include phones {
        padding-left: 70%;
    }
    &__block {
        width: 3rem;
        height: 3rem;
        background-color: #2d3c4e;
    }
    &-up {
        width: 1rem;
        height: 1rem;
        cursor: pointer;
        background: svg-load('arrow-down.svg', fill=#fff, width=100%, height=100%);
        background-repeat: no-repeat;
        transform:  translate(100%, 75%) rotate(-90deg);
    }
    &-down {
        width: 1rem;
        height: 1rem;
        cursor: pointer;
        background: svg-load('arrow-down.svg', fill=#fff, width=100%, height=100%);
        background-repeat: no-repeat;
        transform: translate(100%, 75%) rotate(90deg);
    }
}
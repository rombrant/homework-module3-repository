.icon-bg {
  color: #4b6fd7;
  text-decoration: none;
  &::before {
    display: inline-block;
    content: '';
    width: 1rem;
    height: 1rem;
    cursor: pointer;
    padding-right: 5rem;
    background: svg-load('link.svg', fill=#4b6fd7, width=100%, height=100%);
    background-repeat: no-repeat;
    &::hover {
      background: svg-load('link.svg', fill=#55ddcc, width=100%, height=100%);
    }
  }
}
